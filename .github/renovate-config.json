{
    "extends": [
        "config:base"
    ],
    "helm-values": {
        "fileMatch": [
            "charts/*/values.yaml"
        ]
    },
    "packageRules": [
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchDatasources": [
                "docker"
            ],
            "updateTypes": [
                "minor",
                "patch",
                "major"
            ],
            "automerge": false
        },
        {
            "matchManagers": [
                "helm"
            ],
            "updateTypes": [
                "minor",
                "patch",
                "major"
            ],
            "automerge": false,
            "postUpdateOptions": [
                "helmChartVersion"
            ]
        }
    ]
}