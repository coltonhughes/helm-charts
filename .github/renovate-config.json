{
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "linuxserver/radarr"
            ],
            "matchFiles": [
                "charts/radarr/values.yaml",
                "charts/radarr/Chart.yaml"
            ],
            "extractVersion": "^(?:appVersion:|\\s*tag:)\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?\\s*$",
            "updateTypes": [
                "minor",
                "patch",
                "major"
            ],
            "automerge": false,
            "commitMessageTopic": "{{depName}}"
        }
    ],
    "postUpdateOptions": [
        "helmChartVersion"
    ]
}