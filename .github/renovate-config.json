{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "helm-values": {
        "fileMatch": [
            "**/values.yaml"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "**/values.yaml"
            ],
            "matchStrings": [
                "tag:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "your-registry/your-image-name",
            "versioningTemplate": "semver"
        }
    ],
    "packageRules": [
        {
            "matchManagers": [
                "helm-values",
                "regex"
            ],
            "addLabels": [
                "renovate/helm"
            ],
            "prBodyTemplate": "This PR updates Helm chart dependencies.\n\n- Updates image tags in values.yaml\n- Will trigger automatic appVersion and chart version updates\n\n{{#if hasReleaseNotes}}{{releaseNotes}}{{/if}}",
            "commitMessageTopic": "{{depName}}",
            "commitMessageAction": "Update",
            "commitMessageExtra": "to {{newValue}}",
            "semanticCommits": "enabled",
            "semanticCommitType": "feat",
            "semanticCommitScope": "helm"
        }
    ],
    "postUpdateOptions": [
        "helmUpdateSubChartArchives"
    ],
    "prConcurrentLimit": 3,
    "branchConcurrentLimit": 5
}