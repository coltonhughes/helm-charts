{
    "extends": [
        "config:base"
    ],
    "helm-values": {
        "fileMatch": [
            "**/values.yaml"
        ]
    },
    "packageRules": [
        {
            "matchManagers": [
                "helm-values"
            ],
            "addLabels": [
                "renovate/helm"
            ],
            "addPipelines": [
                "bumpVersion"
            ]
        }
    ],
    "pipelines": {
        "bumpVersion": [
            {
                "manager": "regex",
                "fileMatch": [
                    "**/Chart.yaml"
                ],
                "matchStrings": [
                    "version:\\s*(?<currentValue>[\\d.]+)",
                    "appVersion:\\s*(?<currentValue>[\\d.]+)"
                ],
                "bumpType": "patch"
            }
        ]
    }
}