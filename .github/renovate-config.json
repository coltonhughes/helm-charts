{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "helm-values": {
        "fileMatch": [
            "**/values.yaml"
        ]
    },
    "packageRules": [
        {
            "matchManagers": [
                "helm-values"
            ],
            "addLabels": [
                "renovate/helm"
            ],
            "postUpdateOptions": {
                "bumpVersions": {
                    "filePatterns": [
                        "**/Chart.yaml"
                    ],
                    "matchStrings": [
                        "version:\\s*(?<currentValue>[\\d.]+)"
                    ],
                    "bumpType": "patch"
                }
            }
        }
    ],
    "bumpVersions": [
        {
            "filePatterns": [
                "**/Chart.yaml"
            ],
            "matchStrings": [
                "appVersion:\\s*(?<currentValue>[\\d.]+)"
            ],
            "bumpType": "minor"
        }
    ]
}