{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": false,
  "dependencyDashboardApproval": false,
  "prCreation": "immediate",
  "schedule": ["at any time"],
  "allowedPostUpgradeCommands": ["^\\./scripts/bump-chart-version\\.sh .*"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["^charts/.+/values\\.yaml$"],
      "matchStrings": [
        "(?m)^[ \\t]*image:\\n[ \\t]*repository:\\s*(?<depName>[^\\s]+)\\n(?:[ \\t]*pullPolicy:[^\\n]*\\n)?[ \\t]*tag:\\s*\"?(?<currentValue>[^\"\\s]+)\"?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchFileNames": ["charts/*/values.yaml"],
      "groupName": "chart {{{packageFileDir}}} images",
      "groupSlug": "{{{packageFileDir}}}-images",
      "postUpgradeTasks": {
        "commands": ["./scripts/bump-chart-version.sh {{{packageFileDir}}}"],
        "fileFilters": ["**/Chart.yaml"]
      }
    }
  ]
}
